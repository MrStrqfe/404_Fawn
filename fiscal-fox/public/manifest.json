{
  "manifest_version": 3,
  "name": "Fawn",
  "version": "1.0.0",
  "description": "Fawn Chrome Extension",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "settings.html",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "Gemini_Generated_Image_2i67l42i67l42i67-removebg-preview.png",
      "48": "Gemini_Generated_Image_2i67l42i67l42i67-removebg-preview.png",
      "128": "Gemini_Generated_Image_2i67l42i67l42i67-removebg-preview.png"
    }
  },
  "icons": {
    "16": "Gemini_Generated_Image_2i67l42i67l42i67-removebg-preview.png",
    "48": "Gemini_Generated_Image_2i67l42i67l42i67-removebg-preview.png",
    "128": "Gemini_Generated_Image_2i67l42i67l42i67-removebg-preview.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "text-to-speech/state.js",
        "text-to-speech/speech.js",
        "text-to-speech/domReader.js",
        "text-to-speech/uiOverlay.js",
        "text-to-speech/controller.js",
        "content/night-mode.js",
        "content/remote-handler.js",
        "content/key-terms.js",
        "content/summarize-transactions.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dictionary.json",
        "OpenDyslexic-Regular.otf",
        "categories.json"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Open Fawn"
    }
  }
}