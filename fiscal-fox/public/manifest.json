{
  "manifest_version": 3,
  "name": "Fiscal Fox",
  "version": "1.0.0",
  "description": "Fiscal Fox Chrome Extension",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "options_page": "settings.html",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "text-to-speech/state.js",
        "text-to-speech/speech.js",
        "text-to-speech/domReader.js",
        "text-to-speech/uiOverlay.js",
        "text-to-speech/controller.js",
        "content/night-mode.js",
        "content/key-terms.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dictionary.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
